<style>
  @media (min-width:768px){
    {% if section.settings.dots_position == 'in_img' %}
      #lookbook-{{ section.id }} .slick-dots {
        position: absolute;
        left: 0;
        bottom: 3%;
        margin: 0;
        width: 100%;
      }
    
      #lookbook-{{ section.id }} .slick-dots li button {
        border-width:1px;
        background: {{ section.settings.bg_color_dots }};
        border-color: {{ section.settings.bg_color_dots }};
      }
      
      #lookbook-{{ section.id }} .slick-dots li.slick-active button {
        background: transparent;
      }
    {% endif %}  
    
    #lookbook-{{ section.id }} .slick-arrow {
      border-color: {{ section.settings.bg_color_arrow }};
    }
    
    #lookbook-{{ section.id }} .slick-arrow svg {
      fill: {{ section.settings.bg_color_arrow }};
    }
  }
  
  @media (min-width:1024px){
    #lookbook-{{ section.id }} .lazy-images-contain img{
      height: {{ section.settings.height_img_dk }};
      object-fit: cover;
    }
  }

  @media (max-width: 1023px){
    #lookbook-{{ section.id }} .lazy-images-contain img {
      height: {{ section.settings.height_img_mb }};
      object-fit: cover;
    }
  }
  
  @media (max-width: 767px) {
    {% if section.settings.text_position == 'under_img' %}
      #lookbook-{{ section.id }} .caption-wrap {
        position: static;
        transform: none;
        -webkit-transform: none;
        -ms-transform: none;
        text-align: center!important;
      }
    
      #lookbook-{{ section.id }} .caption-wrap .content h2 {
        color: #000 !important;
      }
    
      #lookbook-{{ section.id }} .caption-wrap .content .slide-des {
        color: #000 !important;
      }    
    {% endif %}
    
    {% if section.settings.dots_position == 'in_img' and section.settings.text_position == 'in_img' %}
    #lookbook-{{ section.id }} .slick-dots {
      position: absolute;
      left: 0;
      bottom: 3%;
      margin: 0;
      width: 100%;
    }
    
    #lookbook-{{ section.id }} .slick-dots li button {
      border-width: 1px;
      background: {{ section.settings.bg_color_dots }};
      border-color: {{ section.settings.bg_color_dots }};
    }
    
    #lookbook-{{ section.id }} .slick-arrow {
      border-color: {{ section.settings.bg_color_arrow }};
    }
    
    #lookbook-{{ section.id }} .slick-arrow svg {
      fill: {{ section.settings.bg_color_arrow }};
    }

    #lookbook-{{ section.id }} .slick-dots li.slick-active button {
      background: transparent;
    }
    {% endif %}    
  }
</style>
