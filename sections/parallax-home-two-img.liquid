<section class="two-block-image parallax-block" id="section-{{ section.id }}">
  <div class="p-0 {% if section.settings.layout == 'full' %}container-full {% else %}container {% endif %}">
    <div class="row m-0">
      {% for block in section.blocks %}
      <figure class="items-block col-12 col-md-6 p-0 m-0 block_{{block.id}}">
        {% if block.settings.img != blank %}
        <img src="{{ block.settings.img | img_url: '100x' }}" alt="{{ block.settings.title  | escape }}"
             class="lazyload"
             data-src="{{ block.settings.img | img_url : '1024x' }}"
             data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
             data-aspectratio="{{ block.settings.img | img_url : '1024x' }}"
             data-sizes="auto">
        {% else %}
        <span class="not_img">570 x 370px</span>
        {% endif %}
        <div class="caption" style="color:{{block.settings.color }};">
          {% if block.settings.text != blank %}<h4 style="font-size: {{block.settings.font_size_1}};">{% include 'multilang' with block.settings.text %}</h4> {% endif %}
          {% if block.settings.title != blank %}<h3 style="font-size: {{block.settings.font_size_2}};">{% include 'multilang' with block.settings.title %}</h3> {% endif %}
          {% if block.settings.des!= blank %}<div class="des" style="font-size: {{block.settings.font_size_3}};">{% include 'multilang' with block.settings.des %}</div> {% endif %}
          {% if block.settings.button_slide!= blank %}
          <a class="btn" href="{{ block.settings.link }}" title="{{ block.settings.button_slide }}" style="color: {{ block.settings.color_button }}; background:{{ block.settings.bg_button }};border:1px solid {{ block.settings.border_button }};font-size:{{ block.settings.font_size_button }};">
          	{% include 'multilang' with block.settings.button_slide %}
          </a>
          {% endif %}
        </div> 
      </figure>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  #section-{{ section.id }}{
    margin-top: {{ section.settings.space_on }}px;
    margin-bottom: {{ section.settings.space_below }}px;
  }
</style>
{% schema %}
  {
      "name": "Parallax Two Images Block",
      "max_blocks": 2,
      "settings": [
		{
          "type" : "radio",
          "id" : "layout",
          "label" : "Layouts",       
          "options": [
            {
              "value": "default",
              "label": "Default"
            },
            {
              "value": "full",
              "label": "Full Width"
            }
          ],
          "default": "default"
        },
        {
          "type": "range",
          "id": "space_on",
          "label": "Space on",
          "min": 0,
          "max": 100,
          "step": 1,
          "default": 0
        },
        {
          "type": "range",
          "id": "space_below",
          "label": "Space below",
          "min": 0,
          "max": 100,
          "step": 1,
          "default": 25
        }
		
      ],
      "blocks" : [
        {
          "type" : "Image",
          "name" : "Image",
          "settings":[
            {
              "type" : "image_picker",
              "id" : "img",
              "label" : "Select Image",
              "info": "( 570 x 370 )Px"
            },
            {
              "type" : "text",
              "id" : "text",
              "label" : "Title",
              "default" : "New Collection"
            },
            {
              "type" : "text",
              "id": "font_size_1",
              "label" : "Font size Title",
              "default" : "13px"
            },
            {
              "type" : "text",
              "id" : "title",
              "label" : "Header",
              "default" : "Silk Scarves"
            },
            {
              "type" : "text",
              "id": "font_size_2",
              "label" : "Font size Header",
              "default" : "40px"
            },
            {
              "type" : "textarea",
              "id" : "des",
              "label" : "Description",
              "default" : "Phasellus lorem malesuada ligula pulvinar commodo maecenas"
            },
            {
              "type" : "text",
              "id": "font_size_3",
              "label" : "Font size Description",
              "default" : "12px"
            },
            {
              "type" : "color",
              "id": "color",
              "label" : "Text Color",
              "default" : "#fff"
            },
            {
              "type" : "text",
              "id" : "button_slide",
              "label" : "Button",
              "default" : "Shop The Collection"
            },
            {
              "type" : "url",
              "id" : "link",
              "label" : "Link"
            },
            {
              "type" : "text",
              "id" : "font_size_button",
              "label" : "Font Size Button",
              "default" : "13px"
            },
            {
              "type" : "color",
              "id" : "bg_button",
              "label" : "Background Button",
              "default" : "#323232"
            },
            {
              "type" : "color",
              "id" : "border_button",
              "label" : "Border Button",
              "default" : "#323232"
            },
            {
              "type" : "color",
              "id" : "color_button",
              "label" : "Button Color",
              "default" : "#fff"
            }
          ]
        }
      ],
      "presets": [{
        "name": "Parallax Two Images Block",
        "category": "Parallax Section",
        "blocks": [
          {
          	"type": "Image"
          },
          {
          	"type": "Image"
          }
        ]
      }]
  }
{% endschema %}
