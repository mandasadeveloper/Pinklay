<div class="full_width_container_mt">
  <div class="section_first_mt">
    <div class="Background_image_wrapper_mt">
      <div class="background_image mobile_hide">
        <img src="{{ section.settings.background_image | img_url : 'master' }}">
      </div>
      <div class="background_image desktop_hide">
        <img src="{{ section.settings.background_image_mobile | img_url : 'master' }}">
      </div>
    </div>

  </div>
  <div class="container_new">
  <div class="section_second_mt">
    <div class="content_mt">
     {{ section.settings.title }}
    </div>
  </div>
    <div class="slick_slider_js">
      {%- for block in section.blocks -%}
      
      {%- case block.type -%}
      {%- when 'image-with-text' -%}
       {% assign mod = forloop.index | modulo: 2 %}
    <div class="wrapper_blocks">
      <div class="set_heading">
      </div>
      <h3 class="our-story-section-content-h3 {% if mod == 0 %}h3_right{% else %}h3_left{% endif %}">
          {% if block.settings.heading != blank %}
            {{ block.settings.heading | escape }}
          {% endif %}
      </h3>
       		<div class="our-story-section-content">
	<div class="left-content"  style="order:{{block.settings.layout}};">
    <div class="left-content-section left_{{ forloop.index }}">
        <div	class="our-story-section-content-p">
           {% if block.settings.para != blank %}
            {{ block.settings.para }}
            {% endif %}
      </div>
     </div>
  	</div>
    <div class="right-content slick_slider_image_change_{{ forloop.index }}">
                {% if block.settings.image != blank %}
          <div class="right-content-bg-image"> 
              <img src="{{ block.settings.image | img_url: 'master' }}">
                 
          </div>
      	 <div class="right-content-bg-image"> 
              <img src="{{ block.settings.image2 | img_url: 'master' }}">
                 
          </div>
      {% endif %}
     </div> 
</div>
    </div>
      <script>
$(document).ready(function(){
    $('.slick_slider_image_change_{{ forloop.index }}').slick({
  slidesToShow: 1,
  slidesToScroll: 1,
  autoplay: true,
  autoplaySpeed: 5000,
  dots : false,
  arrows: false,     
});
});  
</script>
      {%- endcase -%}
   {%- endfor -%}
    </div>
  </div>
</div>



{% schema %}
  {
    "name": "Month of Giving",
    "settings": [
					{
        				"type": "image_picker",
        				"id": "background_image",
        				"label": "Banner Background Image"
      				},
					{
        				"type": "image_picker",
        				"id": "background_image_mobile",
        				"label": "Banner Background Image"
      				},
					{
        				"type": "richtext",
        				"id": "title",
        				"label": "Title"
      				}
				],
				 "blocks": [
    {
      "type": "image-with-text",
      "name": "Block",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "para",
          "label": "Content"
        },
  		{
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
		{
          "type": "image_picker",
          "id": "image2",
          "label": "Image second"
        },
        {
        "type": "select",
        "id": "layout",
        "label": "Image alignment",
        "default": "1",
        "options": [
          {
            "value": "0",
            "label": "left"
          },
          {
            "value": "1",
            "label": "right"
          }
        ]
      },
 {
        "type": "select",
        "id": "content-align",
        "label": "Image height",
        "default": "520px",
        "options": [
          {
            "value": "520px",
            "label": "520px"
          },
          {
            "value": "620px",
            "label": "620px"
          },
		  {
            "value": "720px",
            "label": "720px"
          }
        ]
      }

      ]
    }
  ]

  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

{% javascript %}
{% endjavascript %}

{% style %}
.full_width_container_mt {
    display: block;
    width: 100%;
    max-width: 100%;
}
.container.full_width_mt
{
	max-width : 100%;
	width : 100%;
	padding : 0;
	font-family : Montserrat;
}
.background_image
{
	display : block;
	max-width : 100%;
	width : 100%;
	max-height : 100%;
	min-height : 1px;
	background-size : cover;
	background-position : center center;
}
.section_second_mt
{
	display : block;
	width : 100%;
	max-width : 100%;
}
.content_mt {
    width: 100%;
    max-width: 100%;
    text-align: center;
    margin:  30px 0;
}
.h3_left {
    padding-left: 15px;
	display: inline-block;
    width: 50%;
    float: right;
}
.content_mt p
{
	font-size: 17px;
    line-height: 25px;
    color: #777777;
	text-align : justify;
}
.our-story-section {
    display: block;
    max-width: 100%;
    width: 100%;
    text-align: center;
  }
.our-story-section-content {
    display: flex;
    width: 100%;
    max-width: 100%;
    flex-grow: 1;
    flex-direction: row;
    justify-content: center;
  	margin-bottom : 30px;
}
.left-content {
    display: flex;
    font-size: 18px;
    flex-grow: 1;
	width : 50%;
	max-width : 100%;
  
}
.left-content-section {
    display: block;
    width: 100%;
    text-align: left;
    color: #000;
}
.left_1
{
	padding-left:15px;
}
.left_2
{
	padding-right : 15px;
}
h3.our-story-section-content-h3 {
    font-size: 20px;
    margin-bottom: 5px;
    font-weight: 500;
    line-height: 1.25;
    letter-spacing: 0;
    color: teal;
    font-weight: 600;
	font-style : italic;
}
.slick_slider_js {
    width: 100%;
    max-width: 100%;
    display: block;
    margin: 40px 0px;
}
.our-story-section-content-p p {
    font-size: 17px;
    line-height: 24px;
    font-weight: 300;
  	margin : 0px;
	color : #000;
	text-align : justify;
}
.right-content {
    display: flex;
    max-width: 50%;
    flex-direction: row;
    flex-grow:  1;
    align-items : center;
  	justify-content : center;

}
.right-content-bg-image {
    display: block;
    width: 100%;
   	height : 350px;
  	width: 100%;
    background-repeat: no-repeat;
    background-size: cover;
  	background-position: top;
}
.set_heading {
    display: inline-block;
    width: 50%;
    max-width: 100%;
}
.desktop_hide
{
	display : none;
}
.container_new
{
	max-width : 66.666667% !important;
	margin : auto;
}
.right-content-bg-image img
{
	border-radius : 0;
	height : 100%;
	width : 100%;
}
.background_image img
{
	width : 100%;
	object-fit : cover;
	border-radius :0;
}
h3.our-story-section-content-h3.h3_right {
    margin-left: 0;
	float : right;
	width: 100%;
}
@media (max-width : 768px)
{
	.slick_slider_js
{
	margin: 30px 0;
}
.our-story-section-content
{
	margin-bottom : 30px;
}
	.h3_left
	{
    	padding-left: 0px;
		width : 100%;
		
	}
	.desktop_hide
	{
			display : block;
	}
	.mobile_hide
	{
			display : none;
	}
	.container_new {
    width: 100%;
    max-width: 100% !important;
    padding: 0px 20px;
}
	h3.our-story-section-content-h3
{
	margin-left : 0;
}
.our-story-section-content
{
	flex-direction : column;
}
.left-content
{
	order : 0 !important;
}
.left_1
{
	padding-left :0;
}
.left_2
{
	padding-right : 0;
}
.left-content, .right-content
{
	width : 100%;
	max-width : 100%;
	
}
.left-content
{
	margin-bottom : 30px;
}
.slick_slider_js
{
	margin-bottom : 0
}
h3.our-story-section-content-h3
{
	margin-bottom : 20px;
}
}

@media (max-width : 350px)
{
	h3.our-story-section-content-h3
{
	font-size : 17px;
}
}
{% endstyle %}