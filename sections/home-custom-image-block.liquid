<section class="home-custom-block">
  <div class="container">
    <div class="row">

      {% for block in section.blocks %}

      {% if block.type == 'Oneimage' %}
      <div class="Oneimage column col column-{{block.id}}">
        <div class="row">
          <div class="col-12 custom-item">
            <a href="{{block.settings.ct_link_1}}" title="{{block.settings.ct_hd_1}}">
              {% if block.settings.ct_img_1 != blank %}
              <img src="{{ block.settings.ct_img_1 | img_url: '1024x' }}" alt="{{block.settings.ct_hd_1}}">
              {% else %}
              <span class="not_img">570 x 570px</span>
              {% endif %}
              <div class="caption" style="font-size: {{ block.settings.font_size_header_1 }};color: {{ block.settings.color_header_1 }}">{% include 'multilang' with  block.settings.ct_hd_1 %}</div>
            </a>
          </div>
        </div>
      </div>
      {% endif %}

      {% if block.type == 'Twoimage' %}
      <div class="Twoimage column col column-{{block.id}}">
        <div class="row">
          <div class="col-6 col-md-12 col custom-item">
            <a href="{{block.settings.ct_link_2}}" title="{{block.settings.ct_hd_2}}">
              {% if block.settings.ct_img_2 != blank %}
              <img src="{{ block.settings.ct_img_2 | img_url: '1024x' }}" alt="{{block.settings.ct_hd_2}}">
              {% else %}
              <span class="not_img">570 x 570px</span>
              {% endif %}
              <div class="caption" style="font-size: {{ block.settings.font_size_header_2 }}; color: {{ block.settings.color_header_2 }}">{% include 'multilang' with  block.settings.ct_hd_2 %}</div>
            </a>
          </div>

          <div class="col-6 col-md-12 custom-item">
            <a href="{{block.settings.ct_link_2_1}}" title="{{ block.settings.ct_hd_2_1 }}">
              {% if block.settings.ct_img_2_1 != blank %}
