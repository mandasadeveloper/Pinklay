<style>
  .static-page-h3 {
    font-size: 18px;
    margin-top: 20px;
    margin-bottom: 8px;
    color: #5dc5bf;
    text-transform: none;
}
  .f1{
  background-color: #f2f2f2;
    border-color: #f7f7f7;
    max-width:100% !important;
  }
  
</style>

{% comment %}
  This page template is a requirement if you are submitting your theme to the Shopify Theme Store.
  Be sure to select page.contact as the template from the admin page to have this template take effect.

  For information on adding more fields, visit:
    - http://docs.shopify.com/support/configuration/store-customization/adding-fields-to-the-liquid-contact-form
{% endcomment %}

{% if section.settings.display_google_map %}
<div class="map">
  {% if section.settings.google_map_code != blank %}
  {{ section.settings.google_map_code }}
  {% endif %}
</div>
{% endif %}

<div class="container">
  {% include 'breadcrumb' %}
  
  <div class="contactus-page">
    <div class="rte">
      {{ page.content }}
    </div>

    <div>
      {% form 'contact' %}

      {% comment %}
      Successful message
      {% endcomment %}
      
      {% if form.posted_successfully? %}
      <p class="note form-success" {% if settings.enable_multilang %}data-translate="contact.form.post_success"{% endif %}>
        {{ 'contact.form.post_success' | t }}
      </p>
      {% endif %}

      {{ form.errors | default_errors }}

      <div class="row" style="padding: 0px 20px 0px 20px;"> 
     
        
                 
     <!--content start-->
        {% if section.settings.display_location %}
       <!-- <div class="col-md-5 col-lg-4">-->
        <div class="col-sm-6" style="margin-top: 45px;">
           <header class="page-header" style="border-bottom: none;bottom: 75px;margin-bottom: -65px;">
              <h1>
                {% include 'multilang' with section.settings.contact_title %}
              </h1>
            </header>
          
          <h3 class="static-page-h3"><span>Have a question? Need help?</span></h3>
         
          <!--<h3 class="title_2">
            {% include 'multilang' with section.settings.title_store_location %}
          </h3>-->
          {% if section.settings.location_code != blank %}
            {% if settings.enable_multilang %}
            <div class="location lang1">
              {{ section.settings.location_code | split: '|' | first }}
            </div>
            <div class="location lang2">
              {{ section.settings.location_code | split: '|' | last }}
            </div>
            {% else %}
            <div class="location">
              {{ section.settings.location_code | split: '|' | first }}
            </div>
            {% endif %}
          {% endif %}
        </div>
        {% endif %}
        <!--content end-->
        
        <!--form start-->
        <!--<div class="col-md-7 col-lg-8">-->
        <div class="col-sm-6">
          <div id="contactFormWrapper">
           
            <!--<div class="contact-des">
              {% include 'multilang' with section.settings.contact_text_desc %} 
            </div>-->
            <div class="contact-content">
              <div class="form-group">
              	<label for="contactFormName">
                  <span {% if settings.enable_multilang %}data-translate="contact.form.name"{%endif%}>
                  	{{ 'contact.form.name' | t }}
                  </span>
                  <em>*</em>
                </label>
              	<input class="form-control f1" type="text" id="contactFormName" name="contact[name]" autocapitalize="words" placeholder="{{ section.settings.contact_your_name }}" required>
              </div>
              
              <div class="form-group">
              	<label for="contactFormPhone">
                  <span {% if settings.enable_multilang %}data-translate="contact.form.phone"{%endif%}>
                    {{ 'contact.form.phone' | t }}
                  </span>
                  <em>*</em>
                </label>
              	<input class="form-control f1" type="tel" name="contact[phone]" id="contactFormPhone" pattern="[0-9]*" placeholder="{{ section.settings.contact_phone_number }}" required>
              </div>

              <div class="form-group">
              	<label for="contactFormEmail">
                  <span {% if settings.enable_multilang %}data-translate="contact.form.email"{%endif%}>
                    {{ 'contact.form.email' | t }}
                  </span>
                  <em>*</em>
                </label>
              	<input class="form-control f1" type="email" name="contact[email]" id="contactFormEmail" autocorrect="off" autocapitalize="off" placeholder="{{ section.settings.contact_your_email }}" required>
              </div>
              
              <div class="form-group">
              	<label for="contactFormMessage">
                  <span {% if settings.enable_multilang %}data-translate="contact.form.message"{%endif%}>
                    {{ 'contact.form.message' | t }}</span>
                  <em>*</em>
                </label>
              	<textarea class="form-control f1" rows="6" name="contact[body]" id="contactFormMessage" {% if settings.enable_multilang %}data-translate="contact.form.placeholder_message" translate-item="placeholder"{%endif%} placeholder="{{ 'contact.form.placeholder_message' | t }}" required></textarea>
              </div>
              
              <input type="submit" class="btn left" {% if settings.enable_multilang %}data-translate="contact.form.submit_contact"{%endif%} value="{{ 'contact.form.submit_contact' | t }}">
            </div>
          </div>
        </div>
        
        <!--form end-->
        
  
        
        
        
      </div>
      {% endform %}
    </div>
  </div>
</div>
  

{% schema %}
    {
    "name": "Contact Page",
    "settings": [
      {
        "type": "checkbox",
        "id": "display_google_map",
        "label": "Display Google Map?",
        "default": true
      },
      {
        "type": "textarea",
        "id": "google_map_code",
        "label": "Google Map Code"
      },
      {
        "type": "text",
        "id": "contact_title",
        "label": "Title",
        "default": "Drop Us A Line"
      },
      {
        "type": "richtext",
        "id": "contact_text_desc",
        "label": "Text Description"
      },
      {
        "type": "text",
        "id": "contact_your_name",
        "label": "Placeholder text in Your Name"
      },
      {
        "type": "text",
        "id": "contact_phone_number",
        "label": "Placeholder text in Your Phone"
      },
      {
        "type": "text",
        "id": "contact_your_email",
        "label": "Placeholder text in Your Email"
      },
      {
        "type": "checkbox",
        "id": "display_location",
        "label": "Display Location?",
        "default": true
      },
	  {
		"type" : "text",
		"id" : "title_store_location",
		"label" : "Title 2",
		"default" : "Store Location"
	  },
      {
        "type": "textarea",
        "id": "location_code",
        "label": "Location Code"
      }
    ]
  }
{% endschema %}
