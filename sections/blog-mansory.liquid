{% if section.settings.blog_post != blank %}
  {% assign limit = section.settings.blog_post %}
{% else %}
  {% assign limit = 3 %}
{% endif %}

{% paginate blog.articles by limit %}

<div class="content-blog blog-mansory blog-two-col">
  <ul class="list-blog row">     
    {% for article in blog.articles %}     
    {% if forloop.index > 1 %}
    	{% include 'blog-item-mansory' %}
    {% endif %}
    {% endfor %}
    <div class="col-12 col-md-4 my-sizer-element"></div>
  </ul>
 
  {% if paginate.pages > 1 %} 
    {% include 'pagination' %}
  {% endif %}
</div>

{% endpaginate %}

{% schema %}
  {
    "name": "Main Blog",
    "settings": [
      
      {
        "type": "text",
        "id": "blog_post",
        "label": "Blog post per page",
        "default": "3"
      },	  	
	  {
        "type": "select",
        "id": "blog_text_align",
        "label": "Blog Text Align",
        "options": [
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "left",
        "info": "Default Value: Left"
      },
      
      {
        "type": "checkbox",
        "id": "blog_show_author",
        "label": "Show author",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "blog_show_date",
        "label": "Show date",
        "default": true
      },
	  {
        "type": "checkbox",
        "id": "display_blog_share",
        "label": "Display Blog Share?",
        "default": true
      }
    ]
  }
{% endschema %}

<style>
  .halo-blog-page .list-blog .wrapper-content {
    text-align: {{ section.settings.blog_text_align }};
  }
  .halo-blog-page .blog-mansory .blog-item {
    margin-bottom: 30px;
}
  
.halo-blog-page .list-blog .wrapper-content .blog_author, 
 .halo-blog-page .list-blog .wrapper-content .rte.article-excerpt .des,
  .halo-blog-page .list-blog .wrapper-content .rte.article-excerpt .actions a { 
    margin-bottom : 10px;
  }
  .halo-blog-page .blog-two-col {
      margin-bottom: 0px;
} 

.halo-blog-page .blog-mansory .list-blog {
    margin-bottom: 0px;
}
</style>