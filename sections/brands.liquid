{% if section.settings.display_brands_slider %}
<section class="slider-brand-wrapper">
  <div class="container">
    {% if section.settings.title != blank %}
    <div class="widget-title">
      <h3>
        {% include 'multilang' with section.settings.title %}
      </h3>
      <div class="des">
        {% include 'multilang' with section.settings.des %}

        {% if section.settings.view_all != blank %}
        <a class="view_all" href="{{ section.settings.link_view_all }}" title="{{section.settings.view_all}}">
          {% include 'multilang' with section.settings.view_all %}
        </a>
        {% endif %}
      </div>
    </div>
    {% endif %}
    <div class="slide-brand row" data-row="{{section.settings.brand_per_row}}">
      {% for block in section.blocks %}
      <div id="brand-{{ block.id }}" class="item col-6 col-md-4 col-lg-3 col5">
        <a title="{{ block.settings.title }}" href="{{ block.settings.link }}">
          {% if block.settings.image != blank %}       
          {%- assign img_url = block.settings.image | img_url: '210x' -%}
          <img src="{{ img_url }}" alt="{{ block.settings.image.alt }}"/>
          {% else %}
          <span class="not_img">210 x 50px</span>
          {% endif %}
        </a>
      </div>
      {% endfor %}
    </div>
  </div>
</section>
{% endif %}
{% schema %}
  {
    "name": "Brands Block",
	"max_blocks": 15,
    "settings": [
	  {
        "type": "checkbox",
        "id": "display_brands_slider",
        "label": "Display Brands Slider?",
        "default": true
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Top Brands"
      },
      {
        "type": "textarea",
        "id": "des",
        "label": "Description",
        "default": "Phasellus lorem malesuada de pulvinar commodo"
      },
  	  {
  		"type" : "text",
  		"id" : "view_all",
  		"label" : "Text view all",
  		"default" : "View All Brands"
  	  },
  	  {
  		"type" : "url",
  		"label" : "Link view all",
  		"id" : "link_view_all"
  	  },
	  {
		"type" : "select",
		"id" : "brand_per_row",
		"label" : "Brand Per Row",
		"default" : "5",
        "options": [
                    { "value": "3", "label": "3" },
                    { "value": "4", "label": "4" },
                    { "value": "5", "label": "5" },
                    { "value": "6", "label": "6" }
                  ]
	  }
	],
	"blocks": [
      {
        "type": "image",
        "name": "Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Your Brands",
            "default": "Loremous"
          },
		  {
            "type": "url",
            "id": "link",
            "label": "Link",
            "info": "Optional"
          }
		]
	  }
	],
    "presets": [
      {
        "name": "Brands Block",
        "category": "Images"
      }
    ]
  }
{% endschema %}

