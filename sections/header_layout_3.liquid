<style>
  .top-header{
    color:{{section.settings.hd_top_color}};
    background-color:{{section.settings.hd_top_bg}};
  }
  .top-header a{
    color:{{section.settings.hd_top_color}};
  }
  .bottom-header{
    color:{{section.settings.hd_bt_color}};
    background-color:{{section.settings.hd_bt_bg}};
  }
  .bottom-header a, .hd_currency, .hd-multi-cur i, .bottom-header .column-left .header-search .input-group-field{
    color:{{section.settings.hd_bt_color}};
  }
  
  
  
  .bottom-header .header-search .input-group-field::-webkit-input-placeholder{ 
    color: {{section.settings.hd_bt_color}};
  }
	
  .mobile-items svg,  .menu-mobile svg path{
     fill:{{section.settings.hd_bt_color}};
  }
  
  .bottom-header .header-search .input-group-field::-moz-placeholder{ 
    color: {{section.settings.hd_bt_color}};
  }

  .bottom-header .header-search .input-group-field::-ms-input-placeholder { 
    color: {{section.settings.hd_bt_color}};
  }
  
  .bottom-header .column-left .header-search .input-group-field{
    border-color:{{section.settings.hd_bt_color}};
  }
  .bottom-header .column-left .header-search .btn-search svg, .header .bottom-header .column-right .cartToggle svg{
    fill:{{section.settings.hd_bt_color}};
  }
  
  .bottom-header .header-search .input-group-field::-moz-placeholder {
    color: {{section.settings.hd_bt_color}};
  }
  .header .bottom-header .column-right .cartToggle .cartCount{
    color:{{section.settings.hd_cart_color}};
    background-color:{{section.settings.hd_cart_bg}};
    border-color:{{section.settings.hd_cart_bg}};
  }
  @media (max-width:1024px){
    .header .logo img{ 
      height: {{section.settings.min_height_logo}};
    }
  }

  @media (min-width:1025px){
    .header.header-layout-3 .bottom-header .column-right .cartToggle .cartCount{
    	 color: {{section.settings.hd_bt_color}};
    }
    .header .logo img{ 
      height: {{section.settings.min_height_logo_dk}};
    }
  }
</style>

<header class="header header-layout-3">
  {% if section.settings.dpl_hd_top %}
  {% if section.settings.hd_top_text != blank %}
  <div class="top-header">
    <div class="container">
      <div class="row">
        <div class="text col-12">
          {% include 'multilang' with section.settings.hd_top_text %}
          {% if section.settings.hd_text_link != blank  %}
          <div id="clock_header">{{section.settings.hd_text_link}}</div>
          <script>
            $(document ).ready(function() {
              $("#clock_header").countdown('{{ section.settings.hd_text_link }}', function(event) {
              	$(this).html(event.strftime('' + '<span>%D</span>D  :  '+ '<span>%H</span>H  :  '+ '<span>%M</span>M  :  '+ '<span>%S</span>S')); });
            });
          </script>
           {% endif  %}
        </div>
      </div>
    </div>
  </div>
  {% endif  %}
  {% endif  %}
  <div class="bottom-header">
    <div class="fx-hd">
      <div class="container">
        <div class="row">
          <div class="hd-items column-left">
            <div class="menu-mobile mobile-items">
              <a href="javascript:void(0)" class="menuToggle">
                {% include 'line_menu' %}
                {% include 'icon-close' %}
              </a>          
            </div>
             {% if settings.enable_multilang == true or settings.enable_multiple_currencies == true %}
            <div class="items hd-multi-cur">
              {% if settings.enable_multilang %}
              <div class="lang-block lang-currency-groups">
                <label class="hd_lang"></label>
                <i class="fa fa-angle-down" aria-hidden="true"></i>
                <div class="hd-option lang-groups">
                  <ul class="lang-switcher">
                    <h5>{% include 'multilang' with settings.header_lang %}</h5>
                    <li data-value="1" class="active">
                      <a href="#" title="{{ settings.lange_1 }}">
                        <span class="icon"><img src="{{ "i-lang-1.png" | asset_url }}" alt="{{settings.lange_1}}" /></span>
                        <span class="text">{{ settings.lange_1 }}</span>
                      </a>
                    </li>
                    <li data-value="2">
                      <a href="#" title="{{ settings.lange_2 }}">
                        <span class="icon"><img src="{{ "i-lang-2.png" | asset_url }}" alt="{{settings.lange_2}}" /></span>
                        <span class="text">{{ settings.lange_2 }}</span>
                      </a>
                    </li>
                  </ul>  
                </div>
              </div>
              {% endif %}
              {% if settings.enable_multiple_currencies %}
              <div class="currency-block lang-currency-groups">
                <label class="hd_currency"></label>
                <i class="fa fa-angle-down" aria-hidden="true"></i>
                <div class="hd-option currency-groups">
                 {% include 'new-currency-picker' %}
                </div>
              </div>
              {% endif %}
            </div>
            {% endif %}
            {% if section.settings.display_free_shipping or section.settings.free_shipping == blank %}
            <div class="free-shipping">{% include 'multilang' with section.settings.free_shipping %}</div>
            {% endif %}
            <div class="header-search mobile-items">
              <a href="javascript:void(0)" class="searchToggle">
                {% include 'icon_search' %}
                {% include 'icon-close' %}
              </a> 
              <div class="search-form">
                {% include 'search-bar' %}
              </div>
            </div>
          </div>
          <div class="hd-items column-middle logo">
            {% if section.settings.brand_type == 'image' %}
            <a href="/">
              {% if section.settings.logo != blank %} 
              <img src="{{ section.settings.logo | img_url: '150x' }}" alt="{{ section.settings.logo.alt | default: shop.name }}"
                   class="lazyload logo-desktop"
                   itemprop="logo"
                   data-src="{{ section.settings.logo | img_url: 'master' }}"
                   data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
                   data-aspectratio="{{ section.settings.logo | img_url: 'master' }}"
                   data-sizes="auto">
              {% else %}
              <h1><a class="logo-title" href="/">{{shop.name}}</a></h1>            
              {% endif %}
              {% if section.settings.enable_retina %}
              {% if section.settings.logo_2x != blank %}
              <img src="{{ section.settings.logo_2x | img_url: '150x' }}" alt="{{ section.settings.logo.alt | default: shop.name }}"
                   class="lazyload logo-mobile"
                   itemprop="logo"
                   data-src="{{ section.settings.logo_2x | img_url: 'master' }}"
                   data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
                   data-aspectratio="{{ section.settings.logo_2x | img_url: 'master' }}"
                   data-sizes="auto">
              {% else %}
              {% if section.settings.logo != blank %}
              <img src="{{ section.settings.logo | img_url: '100x' }}" alt="{{ section.settings.logo.alt | default: shop.name }}"
                   class="lazyload logo-mobile"
                   itemprop="logo"
                   data-src="{{ section.settings.logo | img_url: 'master' }}"
                   data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
                   data-aspectratio="{{ section.settings.logo | img_url: 'master' }}"
                   data-sizes="auto">
              {% else %}
              <h1><a class="logo-title" href="/">{{shop.name}}</a></h1>
              {% endif %}
              {% endif %}
              {% endif %}
            </a>
            {% elsif section.settings.brand_text != "" %}
            <h1><a class="logo-title" href="/">{{ section.settings.brand_text }}</a></h1>
            {% else %}
            <h1><a class="logo-title" href="/">{{shop.name}}</a></h1>
            {% endif %}
          </div>
          <div class="hd-items column-right">
            <div class="customer-links">
              <ul>
                <li>
                  {% if customer %}
                  <a id="customer_logout_link" href="/account/logout" {% if settings.enable_multilang %}data-translate="layout.customer.log_out"{% endif %}>
                    {{ 'layout.customer.log_out' | t }}
                  </a>
                  <span class="or" {% if settings.enable_multilang %}data-translate="cart.label.or"{% endif %}>
                    {{ 'cart.label.or' | t }}
                  </span>
                  <a href="/account" {% if settings.enable_multilang %}data-translate="customer.account.title"{% endif %}>
                    {{ 'customer.account.title' | t }}
                  </a>
                  {% else %}
                  <a id="customer_login_link" href="/account/login" {% if settings.enable_multilang %}data-translate="customer.login.login"{% endif %}>
                    {{ 'customer.login.login' | t }}
                  </a>
                  <span class="or" {% if settings.enable_multilang %}data-translate="cart.label.or"{% endif %}>
                    {{ 'cart.label.or' | t }}
                  </span>
                  <a id="customer_register_link" href="/account/register" {% if settings.enable_multilang %}data-translate="layout.customer.create_account_layout_3"{% endif %}>
                    {{ 'layout.customer.create_account_layout_3' | t }}
                  </a>
                  {% endif %}
                </li>
              </ul>
            </div>
            {% if section.settings.display_online_help or section.settings.online_help == blank %}
            <div class="online_help">
              <a href="{{section.settings.link_online_help}}">
                {% include 'multilang' with section.settings.online_help  %}
              </a>
            </div>
            {% endif %}
            <div class="header-search mobile-items d">
              <a href="javascript:void(0)" class="searchToggle">
                {% include 'icon_search' %}
              </a> 
              <div class="search-form">
                {% include 'search-bar' %}
              </div>
            </div>
            {% if settings.enable_wishlist %}
            <div class="wishlist items">
              <a href="/pages/wish-list">
                <i class="fa fa-heart-o" aria-hidden="true"></i>
              </a>
            </div>
            {% endif %}
            <div class="top-cart items">             
              <a href="javascript:void(0)" class="cartToggle">
                {% include 'icon_cart' %}
                <span class="cartCount">{{ cart.item_count }}</span>
              </a>
            </div>
            <div class="mobile-items">
              <a href="javascript:void(0)" class="userToggle">
                {% include 'icon_user' %}
                {% include 'icon-close' %}
              </a>
              <div class="mb-customer">
                {% if customer %}
                <ul>
                  <li>
                    <a id="customer_logout_link" href="/account/logout" {% if settings.enable_multilang %}data-translate="layout.customer.log_out"{% endif %}>
                      {{ 'layout.customer.log_out' | t }}
                    </a>
                  </li>
                  <li>
                    <a href="/account" {% if settings.enable_multilang %}data-translate="customer.account.title"{% endif %}>
                      {{ 'customer.account.title' | t }}
                    </a>
                  </li>
                </ul>
                {% else %}
                <form accept-charset="UTF-8" action="/account/login" method="post">
                  <input name="form_type" type="hidden" value="customer_login" />
                  <input name="utf8" type="hidden" value="✓" />
                  <h3 {% if settings.enable_multilang %}data-translate="customer.login.login"{% endif %}>{{ 'customer.login.login' | t }}</h3>
                  <div class="form-group">
                    <input class="form-control" type="email" value="" name="customer[email]" placeholder="{{ 'customer.login.email' | t }}" >
                    <input class="form-control" type="password" value="" placeholder="{{ 'customer.login.password' | t }}" name="customer[password]" >
                  </div>
                  <div class="action-btn">
                    <input type="submit" class="btn login" {% if settings.enable_multilang %}data-translate="customer.login.login"{% endif %} value="{{ 'customer.login.login' | t }}">
                    <a class="forgot-password" href="/account/login#recover" {% if settings.enable_multilang %}data-translate="customer.login.forgot_password"{% endif %}>{{ 'customer.login.forgot_password' | t }}</a>
                    <a href="/account/register" class="btn register" {% if settings.enable_multilang %}data-translate="customer.login.registers"{% endif %}>{{  'customer.login.registers' | t }}</a>
                  </div>
                </form>
                {% endif %}           
              </div>
            </div>
            <div class="mobile-items mobile-cart">
              <a href="javascript:void(0)" class="cartToggle">
                {% include 'icon_cart' %}
                <span class="cartCount">{{ cart.item_count }}</span>
              </a>
            </div>
            
          </div>
        </div>
      </div>
    </div>
  </div>
  {% include 'dropdown-cart' %}
</header>



