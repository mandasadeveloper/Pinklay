	  {
        "type" : "header",
        "content" : "Bottom Header"
      },
		{
        "type": "checkbox",
        "id": "display_online_help",
        "label": "Display online help",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "display_free_shipping",
        "label": "Display Free Shipping?",
        "default": true
      },
	  {
        "type": "textarea",
        "id": "free_shipping",
        "label": "Header Free Shipping",
        "default": "Free Express Shipping on orders over $79"
      },
	  {
		"type": "text",
		"id": "online_help",
		"label": "Text"
	  },
	  {
		"type": "text",
		"id": "link_online_help",
		"label": "link"
	  },

	  {
		"type" : "header",
		"content" : "Cart"
	  },
	  {
        "type" : "color",
        "id" : "hd_cart_bg",
        "label" : "Background Cart count",
        "default" : "#323232"
      },
      {
        "type" : "color",
        "id" : "hd_cart_color",
        "label" : "Cart count text Color",
        "default" : "#fff"
