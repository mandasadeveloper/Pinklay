<style>  
  .footer-parallax {
  	border-top: 1px solid {{ section.settings.border_color_ft }};
  }
  
  .footer {
    background:{{ section.settings.bg_ft }};
    color: {{ section.settings.color_ft_text }};
  }

  .footer .footer-top .column-footer ul li a,
  .footer-bottom a  {
    color: {{ section.settings.color_ft_text }};
  }

  .footer h3 {
    color: {{ section.settings.color_ft_header }};
  }
  
  .footer-parallax .footer-social ul li a {
  	color: {{ section.settings.color_social }};
  }
  
  .footer-parallax .newsletter .input-group-field {
  	background-color: {{ section.settings.bg_newsletter_color }};
    color: {{ section.settings.newsletter_color }};
    border: 1px solid {{ section.settings.newsletter_border_color }};
  }
  
  .footer-parallax .newsletter ::-webkit-input-placeholder {
    color: {{ section.settings.newsletter_color }};
  }
  
  .footer-parallax .newsletter ::-moz-placeholder {
    color: {{ section.settings.newsletter_color }};
  }
  
  .footer-parallax .newsletter :-ms-input-placeholder {
    color: {{ section.settings.newsletter_color }};
  }
  
  .footer-parallax .newsletter :-moz-placeholder {
    color: {{ section.settings.newsletter_color }};
  }
  
  .footer-parallax .newsletter .btn {
  	background-color: {{ section.settings.bg_newsletter_button_color }};
    color: {{ section.settings.newsletter_button_color }};
  }
  
  .footer-parallax .top-message {
  	background-color: {{ section.settings.bg_mess }};
    color: {{ section.settings.mess_color }};
  }

</style>
