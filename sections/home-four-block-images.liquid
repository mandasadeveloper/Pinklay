                {% if section.settings.title_3 != blank %}<h3>{% include 'multilang' with section.settings.title_3 %}</h3> {% endif %}
                {% if section.settings.des_3 != blank %}<div class="des">{% include 'multilang' with section.settings.des_3 %}</div> {% endif %}
              </div>
            </a>
          </figure>
        </div>
      </div>

      <div class="column-right col-12 col-md-6">
