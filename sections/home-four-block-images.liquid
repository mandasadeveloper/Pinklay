<section class="two-block-image four-block four-{{section.id}}">
  <div class="{% if section.settings.layout == 'full' %}container-full {% else %}container {% endif %}">
    <div class="row">
      <div class="column-left col-12 col-md-6">
        <div class="row">
          <figure class="items-block col-12 item-1">
            <a href="{{ section.settings.link }}" title="{{ section.settings.title_1 }}">
              {% if section.settings.img != blank %}
              <img src="{{ section.settings.img | img_url: '100x' }}" alt="{{ section.settings.title_1  | escape }}"
                   class="lazyload"
                   data-src="{{ section.settings.img | img_url : '1024x' }}"
                   data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
                   data-aspectratio="{{ section.settings.img | img_url : '1024x' }}"
                   data-sizes="auto">
              {% else %}
              <span class="not_img">570 x 370px</span>
              {% endif %}
              <div class="caption">
                {% if section.settings.text != blank %}<h4>{% include 'multilang' with section.settings.text %}</h4> {% endif %}
                {% if section.settings.title_1 != blank %}<h3>{% include 'multilang' with section.settings.title_1 %}</h3> {% endif %}
                {% if section.settings.des!= blank %}<div class="des">{% include 'multilang' with section.settings.des %}</div> {% endif %}
              </div>
            </a>
          </figure>
          <figure class="items-block col-12 item-2">
            <a href="{{ section.settings.link_3 }}" title="{{ section.settings.title_3 }}">

              {% if section.settings.img_3 != blank %}
              <img src="{{ section.settings.img_3 | img_url: '100x' }}" alt="{{ section.settings.title_3  | escape }}"
