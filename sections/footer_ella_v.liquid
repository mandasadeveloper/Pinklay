<style>
  .footer .footer-top .column-footer .newsletter .input-group-btn .btn{
  	background-color: {{section.settings.ft_submit }};
    border: 1px solid {{section.settings.ft_submit }};
    color:{{section.settings.ft_submit_text}};
  }
  .footer .footer-top .column-footer .newsletter .input-group-field{
    background: {{section.settings.ft_input }};
    border:1px solid {{section.settings.ft_input_br }};
    color:{{section.settings.ft_input_text}};
  }
  
  .footer .footer-top .column-footer .newsletter .input-group-field::-webkit-input-placeholder{
  	color:{{section.settings.ft_input_text}};
  }
  .footer .footer-top .column-footer .newsletter .input-group-field::-moz-placeholder{
    color:{{section.settings.ft_input_text}};
  }
  .footer .footer-top .column-footer .newsletter .input-group-field::-ms-input-placeholder{
  color:{{section.settings.ft_input_text}};
  }
  .footer .footer-top .column-footer .newsletter .input-group-field::-moz-placeholder{
  color:{{section.settings.ft_input_text}};
  }
  
  .footer{
    background:{{ section.settings.bg_ft }};
    color: {{ section.settings.color_ft_text }};
  }

  .footer .footer-top .column-footer ul li a {
    color: {{ section.settings.color_ft_text }};
  }
  
  .footer-bottom .footer-content {
  	border-top: 1px solid {{ section.settings.ft_border | color_modify: 'alpha', 0.15 }};
