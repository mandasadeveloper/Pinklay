<footer class="footer footer-ella-version">
  <div class="footer-top">
    <div class="container">
      <div class="row">
        <div class="col-6 col-md-4 col-lg-2 col-xl-2 column-footer">
          {% if section.settings.footer_title_2 != blank %}
          <h3>
            {% include 'multilang' with section.settings.footer_title_2 %}
          </h3>
          {% endif %}
          
          {%- assign footer_linklist = section.settings.footer_linklist_2 -%}
          {% if linklists[footer_linklist].links.size > 0 %}
          <ul>
            {% for link in linklists[footer_linklist].links %}
            <li>
              <a href="{{ link.url}}">
                {% include 'multilang' with link.title %}
              </a>
            </li>
            {% endfor %}
          </ul>
          {% endif %}
        </div>
        
        <div class="col-6 col-md-4 col-lg-2 col-xl-2 column-footer">
          {% if section.settings.footer_title_3 != blank %}
          <h3>
            {% include 'multilang' with section.settings.footer_title_3 %}
          </h3>
          {% endif %}
          
          {%- assign footer_linklist = section.settings.footer_linklist_3 -%}
          {% if linklists[footer_linklist].links.size > 0 %}
          <ul>
            {% for link in linklists[footer_linklist].links %}
            <li>
              <a href="{{ link.url}}">
                {% include 'multilang' with link.title %}
              </a>
            </li>
            {% endfor %}
          </ul>
          {% endif %}
        </div>
        
        <div class="col-6 col-md-4 col-lg-2 col-xl-2 column-footer">
          {% if section.settings.footer_title_4 != blank %}
          <h3>
            {% include 'multilang' with section.settings.footer_title_4 %}
          </h3>
          {% endif %}
          
          {%- assign footer_linklist = section.settings.footer_linklist_4 -%}
          {% if linklists[footer_linklist].links.size > 0 %}
          <ul>
            {% for link in linklists[footer_linklist].links %}
            <li>
              <a href="{{ link.url}}">
                {% include 'multilang' with link.title %}
              </a>
            </li>
            {% endfor %}
          </ul>
          {% endif %}       
        </div>
        
        <div class="col-12 col-md-8 col-lg-4 col-xl-4 offset-xl-2 column-footer no-dropdown">     
          {% if section.settings.footer_newsletter_enable %}
          <div class="footer-newsletter">
            <h3>
              {% include 'multilang' with section.settings.footer_newsletter_text %}
            </h3>
            <div class="des">
              {% include 'multilang' with  section.settings.des_newsletter %}
            </div>
            {% include 'homepage-block-newsletter' %}
          </div>
          {% endif %}
          
          {% if section.settings.footer_social_enable %}
          <div class="footer-social">
            {% include 'social-media' %}
          </div>
          {% endif %}
        </div>        
      </div>
    </div>
  </div>
  
  {% if section.settings.display_ft_bt %}
  <div class="footer-bottom">
    <div class="container">
      <div class="footer-content">
        <div class="row">
          <div class="footer_address column-left col-12 col-lg-7 col-xl-6">
            {% include'multilang' with section.settings.ft_address %}
          </div>
          
          <div class="footer_address column-right col-12 col-lg-5 col-xl-6">
            <ul>
              {% if section.settings.dpl_ico_1 %}
              <li>
                <a href="javascript:void(0)">
                  {% include 'payment-visa'%}
                </a>
              </li>
              {% endif %}

              {% if section.settings.dpl_ico_2 %}
              <li>
                <a href="javascript:void(0)">
                  {% include 'payment-amex'%}
                </a>
              </li>
              {% endif %}

              {% if section.settings.dpl_ico_3 %}
              <li>
                <a href="javascript:void(0)">
                   <i class="fa fa-cc-mastercard" aria-hidden="true"></i>
                </a>
              </li>
              {% endif %}

              {% if section.settings.dpl_ico_4 %}
              <li>
                <a href="javascript:void(0)">
                  {% include 'payment-paypal'%}
                </a>
              </li>
              {% endif %}

              {% if section.settings.dpl_ico_5 %}
              <li>
                <a href="javascript:void(0)">
                  <i class="fa fa-google-wallet" aria-hidden="true"></i>
                </a>
              </li>
              {% endif %}

              {% if section.settings.dpl_ico_6 %}
              <li>
                <a href="javascript:void(0)">
                  {% include 'payment-apple'%}
                </a>
              </li>
              {% endif %}

              {% if section.settings.dpl_ico_7 %}
              <li>
                <a href="javascript:void(0)">
                  <i class="fa fa-cc-discover" aria-hidden="true"></i>
                </a>
              </li>
              {% endif %}

              {% if section.settings.dpl_ico_8 %}
              <li>
                <a href="javascript:void(0)">
                  <i class="fa fa-credit-card-alt" aria-hidden="true"></i>
                </a>
              </li>
              {% endif %}

              {% if section.settings.dpl_ico_9 %}
              <li>
                <a href="javascript:void(0)">
                  <i class="fa fa-cc-diners-club" aria-hidden="true"></i>
                </a>
              </li>
              {% endif %}

              {% if section.settings.dpl_ico_10 %}
              <li>
                <a href="javascript:void(0)">
                  <i class="fa fa-credit-card-alt" aria-hidden="true"></i>
                </a>
              </li>
              {% endif %}

              {% if section.settings.dpl_ico_11 %}
              <li>
                <a href="javascript:void(0)">
                  <i class="fa fa-cc-stripe" aria-hidden="true"></i>
                </a>
              </li>
              {% endif %}

              {% if section.settings.dpl_ico_12 %}
              <li>
                <a href="javascript:void(0)">
                  <i class="fa fa-cc-jcb" aria-hidden="true"></i>
                </a>
              </li>
              {% endif %}            
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  {% endif %}
</footer>


