.lookbook_page {
  a {
  	outline:none;
  }
  
  .lazy-images-contain {
    text-align: center;
    position: relative;

    img {
      margin:auto;
    }

    .images-desktop {
      display: none;
    }
  }

  .caption-wrap {
    position: absolute;
    top: 50%;    
    text-align: center;    

    h2 {
      margin-bottom: 20px;
      font-weight: 700;            
    }
    
    .slide-des {
      line-height: 24px;
      margin-bottom: 30px;
    }
    
    .button-slide {
      width: 100%;
      display: block;
      max-width: 227px;
      text-align: center;
      text-transform: uppercase;
      font-weight: 600;
      letter-spacing: 0.04em;
      padding: 10px 15px 8px;
      text-decoration: none;
      overflow: hidden;
      text-overflow: ellipsis;
      @include border-radius(1px);
      margin: 0 auto;
      
      &:hover{
        background:{{ settings.hover_bg_button_1 }}!important;
        color: {{ settings.hover_color_text_1 }}!important;
        border-color:{{settings.hover_border_button_1}}!important;
      }      
    }
    
    &.slide-left {
      left: 5%;
      @include transform(translateY(-50%));
    }
    
    &.slide-center {
      left: 50%;
      @include transform(translate(-50%, -50%));
      min-width: 90%;
      
      .slide-des {
        margin:0 auto 30px auto;
      }
    }
    
    &.slide-right{
      right: 5%;
      @include transform(translateY(-50%));
    }
  }
    
  .lookbook-item {
    position: absolute;
    
    .glyphicon {
      width: 25px;
      height: 25px;
      @include border-radius(50%);
      @include flex(center, center);
      line-height: 25px;
      font-size: 16px;
      cursor: pointer;
      position: relative;
      
      &:before{
        -webkit-animation: scale-normal 1.3s ease-in-out infinite;
        animation: scale-normal 1.3s ease-in-out infinite;
        content: "";
        width: 25px;
        height: 25px;
        position: absolute;
        @include border-radius(50%);
        @include opacity(.3);
        left: 0;
        top: 0;
      }
    }
  }
  
  .not_img {
  	@include not_img(570px, 470px);
  }
  
  .slick-arrow {
  	@include slick_arrow(50px, 50px, transparent, #6b686b, 50%, 1%);
    border: none;
    @include border-radius(50%);
    @include flex(center, flex-start);
    @include trans_form(50%);
    @include opacity(0);
    
    svg {      
      width: 30px;
      height: 30px;
      padding-right: 2px;
      margin: auto;     
    }
  }
  
  .slick-next {
  	left: auto;
    right: 1%;

    svg {      
      padding-left: 2px;
      padding-right: 0;
    }
  }
  
  @include slick_dots(center, 13px, 13px, #969696, 1px, #fff);
  
  .sl-wrp {
    &:not(.slick-slider) {
      .slider + .slider {
      	display: none;
      }
    }
  }
  
  &:hover {
    .slick-arrow {
      @include opacity(1);
    }
  }
}

