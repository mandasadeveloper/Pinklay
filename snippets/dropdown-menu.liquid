<ul class="site-nav-dropdown">
  <li class="menu-mb-title" style="display: none;">
    <span class="icon-dropdown no-event">
      <i class="fa fa-angle-left" aria-hidden="true"></i>
    </span>
    {% include 'multilang' with link_child %}
  </li>
  
  {% for link_child_item in linklists[link_child].links %}
  <li {% if linklists[link_child_item.handle] != empty %}class="dropdown"{% endif %}>
    <a {% if linklists[link_child_item.handle] != empty %}class="menu-moblie"{% endif %} href="{{ link_child_item.url }}">
      {% include 'multilang' with link_child_item.title %}
      {% if linklists[link_child_item.handle] != empty and settings.show_dropdown_arrow %}
      <span class="icon-dropdown">
        <i class="fa fa-angle-right" aria-hidden="true"></i>
      </span>
      {% endif %}
    </a>
    {% if linklists[link_child_item.handle] != empty %}
    <ul class="site-nav-dropdown">
      <li class="menu-mb-title" style="display: none;">
        <span class="icon-dropdown no-event">
          <i class="fa fa-angle-left" aria-hidden="true"></i>
        </span>
        {% include 'multilang' with link_child_item.title %}
      </li>
      
      {% for n in linklists[link_child_item.handle].links %}
      <li {% if linklists[n.handle] != empty %}class="dropdown"{% endif %}>
        <a {% if linklists[n.handle] != empty %}class="menu-moblie"{% endif %} href="{{ n.url }}">
          {% include 'multilang' with n.title %}
          {% if linklists[n.handle] != empty and settings.show_dropdown_arrow %}
          <span class="icon-dropdown">
          <i class="fa fa-angle-right" aria-hidden="true"></i>
          </span>
          {% endif %}
        </a>
        {% if linklists[n.handle] != empty %}
        <ul class="site-nav-dropdown">
          {% for i in linklists[n.handle].links %}
          <li {% if linklists[i.handle] != empty %}class="dropdown"{% endif %}>
            <a {% if linklists[i.handle] != empty %}class="menu-moblie"{% endif %} href="{{ i.url }}">
              {% include 'multilang' with i.title %}
              {% if linklists[i.handle] != empty and settings.show_dropdown_arrow %}
              <span class="icon-dropdown">
                <i class="fa fa-angle-right" aria-hidden="true"></i>
              </span>
              {% endif %}
            </a>
          </li>
          {% endfor %}
        </ul>
        {% endif%}
      </li>
      {% endfor %}
    </ul>
    {% endif %}
