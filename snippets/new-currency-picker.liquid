{% if settings.enable_multiple_currencies %}
<ul id="currencies">
  
  <h5>{% include 'multilang' with settings.header_cur %}</h5>
  
  {% assign currency_1_length = settings.currency_1_unit | size %}
  {% if currency_1_length > 0 %}
  <li data-currency="{{settings.currency_1_unit}}" {% if shop.currency == settings.currency_1_unit %} class="active" {% endif %} value="{{settings.currency_1_unit}}">
    <a href="#">
      <span class="icon"><img src="{{"i-currency-1.png" | asset_url}}" alt="{{settings.currency_1_unit}}" /></span>
      <span class="text">{{settings.currency_1_unit}}</span>
    </a>
  </li> 
  {% endif %}
  
  {% assign currency_2_length = settings.currency_2_unit | size %}
  {% if currency_2_length > 0 %}
  <li data-currency="{{settings.currency_2_unit}}" {% if shop.currency == settings.currency_2_unit %} class="active" {% endif %} value="{{settings.currency_2_unit}}">
    <a href="#">
      <span class="icon"><img src="{{"i-currency-2.png" | asset_url}}" alt="{{settings.currency_2_unit}}" /></span>
      <span class="text">{{settings.currency_2_unit}}</span>
    </a>
  </li> 
  {% endif %}
  
  {% assign currency_3_length = settings.currency_3_unit | size %}
  {% if currency_3_length > 0 %}
  <li data-currency="{{settings.currency_3_unit}}" {% if shop.currency == settings.currency_3_unit %} class="active" {% endif %} value="{{settings.currency_3_unit}}">
    <a href="#">
      <span class="icon"><img src="{{"i-currency-3.png" | asset_url}}" alt="{{settings.currency_3_unit}}" /></span>
      <span class="text">{{settings.currency_3_unit}}</span>
    </a>
  </li> 
  {% endif %}
  
  {% assign currency_4_length = settings.currency_4_unit | size %}
  {% if currency_4_length > 0 %}
  <li data-currency="{{settings.currency_4_unit}}" {% if shop.currency == settings.currency_4_unit %} class="active" {% endif %} value="{{settings.currency_4_unit}}">
    <a href="#">
      <span class="icon"><img src="{{"i-currency-4.png" | asset_url}}" alt="{{settings.currency_4_unit}}" /></span>
      <span class="text">{{settings.currency_4_unit}}</span>
    </a>
  </li> 
  {% endif %}
  
</ul>

<div class="currencies_modal" style="display:none">
  <div {% if settings.enable_multilang %}data-translate="general.currency.change_text"{% endif %}>{{ 'general.currency.change_text' | t }}</div><span></span>
</div>

{% endif %}
