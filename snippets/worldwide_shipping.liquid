<style>

#modalintlsiteredirect .close svg {
    width: 13px;
    height: 13px;
}
   
   #modalintlsiteredirect .close {
    position: absolute;
    right: -5px;
    top: 0px;
    width: 29px;
    height: 29px;
    -moz-border-radius: 1px;
    -webkit-border-radius: 1px;
    -ms-border-radius: 1px;
    -o-border-radius: 1px;
    border-radius: 1px;
    padding: 0;
    opacity: 1;
    -ms-filter: "progid:DXImageTransform.Microsoft.Alpha(opacity=100)";
    filter: alpha(opacity=100);
    display: flex;
    display: -ms-flexbox;
    display: -webkit-flex;
    -webkit-align-items: center;
    -moz-align-items: center;
    -ms-align-items: center;
    align-items: center;
    -webkit-box-pack: center;
    -moz-box-pack: center;
    -ms-flex-pack: center;
    -webkit-justify-content: center;
    justify-content: center;
    -webkit-justify-content: center;
    justify-content: center;
    background: #80808050;
    color: #ffffff;
    border: 1px solid grey;
    fill: #ffffff;    cursor: pointer;
}
  #modalintlsiteredirect {
    margin: auto;
        top: 15vh;
    padding-top: 15px;
  }
 @media (max-width: 576px) {  
  #modalintlsiteredirect .modal-dialog {  
   margin: 20px;
  }
 }
  #modalintlsiteredirect a.btn.proceed {
    background-color: #5ac4be;
    border: 1px solid #5ac4be;
    color: #fff; padding: 10px 15px;
}

   @media (min-width: 576px) {
.modal-dialog {
  transform: translate(-50%, -50%);
   max-width: 750px;
    height: 300px;
    margin: auto;
    width: 100%;
}
   }
   #modalintlsiteredirect .modal-body .context_modal h2 {
     font-size: 20px;
    text-transform: uppercase;
    letter-spacing: .04em;
    font-weight: 600;
    margin-bottom: 15px;
   }
  #modalintlsiteredirect .modal-body .context_modal p {
    color: #2d2d32;
    line-height: 20px;
    margin-bottom: 10px;font-size: 11px;
}
  #modalintlsiteredirect .modal-body .context_modal .left_side,
   #modalintlsiteredirect .modal-body .context_modal .right_side {
     padding: 40px;
}
   @media (max-width: 650px) {
   #modalintlsiteredirect .modal-body .context_modal .left_side, #modalintlsiteredirect .modal-body .context_modal .right_side {
    padding: 10px 40px;
}
     #modalintlsiteredirect .modal-body .context_modal h2 {
    font-size: 15px;    
    letter-spacing: 0.01em;    
     }
   }
   #modalintlsiteredirect .modal-body .context_modal ul li {
     font-size: 11px;
   }
   #modalintlsiteredirect .modal-body .context_modal ul {
     list-style: disc;
    list-style-position: outside;
    padding: 0px 15px;
   }
  </style>
   <div class="modal fade" id="modalintlsiteredirect" role="dialog">
    <div class="modal-dialog">
    
      <div class="modal-content">
        <div class="modal-header" style="padding: 0px 10px;border:none;">
            <a data-dismiss="modal" class="btn close" title="{{ 'cart.ajax_cart.close' | t }}">{% include 'icon-close' %}</a>                 
        </div>
        <div class="modal-body text-center">
          <div class="context_modal row">
            <div class="col-md-5 text-left left_side">
              <img class="lazy lazyload" data-src="https://cdn.shopify.com/s/files/1/0249/5099/7070/files/PINKLAY_FINAL_LOGO-02_1_250x.jpg?v=1601475051">
            </div>
            <div class="col-md-7 text-left right_side">
              <h2>Now Shipping Worldwide!</h2>
              <p>Looking to ship outside India? We make it easy to shop from anywhere in the world with:</p>
              <ul>
                <li>All prices in US Dollars</li>
                <li>Low international shipping rates</li>
                <li>Fast and secure checkout</li>
              </ul>
              {% assign current_url = '' %}
          {% case template %}
          {% when 'page' %}
          {% assign current_url = page.url %}
          {% when 'blog' %}
          {% assign current_url = blog.url %}
          {% when 'article' %}
          {% assign current_url = blog.url %}
          {% when 'collection' %}
          {% assign current_url = collection.url %}
          {% when 'product' %}
          {% assign current_url = product.url %}
          {% endcase %}          
          <a class="btn proceed" href="https://world.pinklay.com{{current_url}}">Visit International Website</a> 
       
            </div>
          </div>
          
        </div>        
      </div>      
    </div>
  </div>
