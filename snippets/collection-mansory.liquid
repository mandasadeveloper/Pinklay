<div class="halo-container">
  <div class="container">

    <div class="reverse-mb">
      {% section 'collection-header' %}

      <!--{% include 'breadcrumb' %}-->
      <div class="repbred" style="margin-bottom: 15px;padding: 8px 0;"></div>
    </div>

    <div class="row collection-container mansory-container">

      {% if settings.display_sidebar_cat_page %}
      <aside class="sidebar collection-sidebar col-12 col-md-12 col-lg-3">
        {% section 'sidebar-filter' %}
      </aside>

      {% endif %}

      <div class="block-row col-main col-12 col-md-12{% if settings.display_sidebar_cat_page %} col-lg-9{% else %} col-lg-12{% endif %}">             
        {% section 'collection-mansory' %}         
      </div>

    </div>

    {% if settings.display_sidebar_cat_page %}
    <div class="close-filter hide">
      <a href="javascript:void(0)" title="Close">
        {% include 'icon-close' %}
      </a>
    </div>
    {% endif %}

  </div>
</div>