{% if settings.display_popup_newsletter %}
<script type="text/javascript">
  $(function() {       

    $('#upsell-modal .modal-overlay').on('click', function(){
      closeupsellModalWindow ();
    }),
    jQuery('#upsell-modal .btn.close').click(function(e) {
      e.preventDefault();
      if ($('input[name=dismiss]').is(':checked')) {
        closeupsellwrapperModalWindow();
      } else {
        closeupsellModalWindow();
      }
    });

    jQuery('body').keydown(function(e) {
      if( e.which == 27) {
        closeupsellModalWindow();
        jQuery('body').unbind('keydown');
      }
    });

    function closeupsellwrapperModalWindow () {
      jQuery('#upsell-modal .modal-window').fadeOut(600, function() {
        jQuery('#upsell-modal .modal-overlay').fadeOut(600, function() {
          jQuery('#upsell-modal').hide();
//           var exprietime = new Date();
//   			exprietime.setTime(exprietime.getTime() + (60 * 60 * 1000));
//           jQuery.cookie('emailSubcribeModal', 'closed', {expires: exprietime, path:'/'});
        });
      })
    }

    function closeupsellModalWindow () {
      jQuery('#upsell-modal .modal-window').fadeOut(600, function() {
        jQuery('#upsell-modal .modal-overlay').fadeOut(600, function() {
          jQuery('#upsell-modal').hide();
//            var exprietime = new Date();
//   			exprietime.setTime(exprietime.getTime() + (60 * 60 * 1000));
//           jQuery.cookie('emailSubcribeModal', 'closed', {expires: exprietime, path:'/'});
        });
      })
    }
    
//$('#desktopnewsletter input[name=subscribe]').click(function(){
    // closeEmailModalWindow();
     // });
  });
  
</script>
