  window.dropdowncart_type = "{{ settings.dropdowncart_type }}";
  window.file_url = "{{''|file_url}}";
  window.asset_url = "{{''|asset_url}}";
  window.show_sidebar = "{{settings.title_sidebar_mb}}";
  window.hide_sidebar = "{{settings.hide_sidebar_mb}}";
  window.template_suffix = "{{ template.suffix }}";
  window.ajax_sidebar_link = {{settings.display_ajax_sidebar_link}};
  
  window.inventory_text = {
    in_stock: "{{ 'products.product.in_stock' | t }}",
    many_in_stock: "{{ 'products.product.many_in_stock' | t }}",
    out_of_stock: "{{ 'products.product.out_of_stock' | t }}",
    add_to_cart: "{{ 'products.product.add_to_cart' | t }}",
    sold_out: "{{ 'products.product.sold_out' | t }}",
    unavailable: "{{ 'products.product.unavailable' | t }}",
    add_wishlist : "{{ 'wishlist.general.add_to_wishlist' | t }}",
    remove_wishlist : "{{ 'wishlist.general.remove_wishlist' | t }}",
    select_options : "{{ 'products.product.select_options' | t }}",
    hide_options : "{{ 'products.product.hide_options' | t }}",
    show_options : "{{ 'products.product.show_options' | t }}",
    adding : "{{ 'products.product.adding' | t }}",
    thank_you : "{{ 'products.product.thank_you' | t }}",
    add_more : "{{ 'products.product.add_more' | t }}",
    cart_feedback : "{{ 'products.product.cart_feedback' | t }}"
  };    
          
  window.multi_lang = {{settings.enable_multilang}};
  
  window.simply = window.simply || {};
  window.cn = function (o) { return "undefined" == typeof o || null == o || "" == o.toString().trim() };
  window.cb = function (o) { if (o == 'true') { return true } else { return false } };
  simply.money_format = " <span class=money>₹ {{amount_no_decimals}}</span>";
  simply.money_format_with_currency = "<span class=money>₹ {{amount_no_decimals}}</span>";
  simply.processing = true;
  simply.logged = false;
  /* ===== Express Shipping settings start ===== */
  simply.enableExpressShipping =false;
  simply.shippingTimePeriods = {
    'express_shipping': 1,
    'non_express_shipping': 5
  }
  /* ===== Express Shipping settings end ===== */
  simply.jsToDelay = [];
  simply.isVoyagerEnable = true;
  simply.isVoyagerCustomer = false;
  simply.EOSSEnable = false;
  simply.enableEarlyAccessVoyager = false;
  simply.early_access_tag = "Product_early-access";
  simply.voyagerExclusiveProduct = false;
  simply.exclusiveProductFeature = false;
  simply.shippingThreshold = '500000';
  simply.is_staging_store = true;
  simply.is_staging_store = false;
</script>

